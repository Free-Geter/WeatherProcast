<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_center_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周六"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/item_center_tv_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:textSize="16sp"
        android:layout_toRightOf="@id/item_center_tv_date"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/item_center_tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_center_tv_wind"
        android:text="9~-1℃"
        android:layout_marginRight="5dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_center_tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="North wind"/>

    <ImageView
        android:id="@+id/item_center_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/item_center_tv_temp"
        android:src="@mipmap/icon_light"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_center_tv_date"
        android:layout_marginTop="5dp"
        android:background="#E0E0E0"/>


</RelativeLayout>