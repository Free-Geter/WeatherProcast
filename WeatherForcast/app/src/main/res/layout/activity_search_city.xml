<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/search_tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:text="确认"
        android:textSize="20dp"
        android:layout_alignBaseline="@id/search_et"/>

    <EditText
        android:id="@+id/search_et"
        android:padding="3dp"
        android:drawableLeft="@mipmap/icon_search"
        android:drawablePadding="5dp"
        android:layout_toLeftOf="@id/search_tv_submit"
        android:hint="搜索国内城市"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bg"/>

    <TextView
        android:id="@+id/search_tv"
        android:layout_below="@id/search_tv_submit"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="热门城市"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <GridView
        android:id="@+id/search_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_tv"
        android:numColumns="5">

    </GridView>

</RelativeLayout>