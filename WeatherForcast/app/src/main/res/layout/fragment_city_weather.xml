<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/frag_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/frag_tv_current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3℃"
                android:textSize="40sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/frag_tv_city"
                android:text="Beijing"
                style="@style/todaytext"
                android:layout_below="@id/frag_tv_current_temp"/>
            <TextView
                android:id="@+id/frag_tv_condition"
                style="@style/todaytext"
                android:text="Sunny"
                android:layout_below="@id/frag_tv_city"/>
            <TextView
                android:id="@+id/frag_tv_date"
                android:text="2020-05-15"
               style="@style/todaytext"
                android:layout_marginTop="20dp"
                android:layout_below="@id/frag_tv_condition"/>
            <TextView
                android:id="@+id/frag_tv_wind"
                android:layout_below="@id/frag_tv_date"
                android:text="East Wind 3-4 degree"
                style="@style/todaytext"/>

            <TextView
                android:id="@+id/frag_tv_temp_range"
                style="@style/todaytext"
                android:layout_below="@id/frag_tv_wind"
                android:text="温度区间: 9~-1℃"
                android:layout_marginTop="10dp"/>
            <View
                android:id="@+id/frag_line"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:background="@color/colorPrimaryDark"
                android:layout_toRightOf="@id/frag_tv_temp_range"
                android:layout_alignBottom="@id/frag_tv_temp_range"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/frag_tv_PM25"
                style="@style/todaytext"
                android:text="PM2.5:  50"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/frag_line"
                android:layout_alignBottom="@id/frag_line"/>
            <ImageView
                android:id="@+id/frag_iv_today"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon"/>
        </RelativeLayout>
        <!-- TODO:未来三天的天气情况       -->
        <LinearLayout
            android:background="@drawable/frag_bg4future"
            android:id="@+id/frag_center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical">
        </LinearLayout>

<!--    各种指数信息-->
        <LinearLayout
            android:id="@+id/frag_index_layout"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frag_bg4future">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_dress"
                    style="@style/indextext"
                    android:text="穿衣指数"
                    android:drawableBottom="@mipmap/icon_cloth"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/frag_index_tv_washcar"
                    style="@style/indextext"
                    android:text="洗车指数"
                    android:drawableBottom="@mipmap/icon_car"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/frag_index_tv_cold"
                    style="@style/indextext"
                    android:text="感冒指数"
                    android:drawableBottom="@mipmap/icon_ganmao"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2E8B57"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_sport"
                    style="@style/indextext"
                    android:text="运动指数"
                    android:drawableBottom="@mipmap/icon_sport"
                    android:layout_marginTop="5dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/frag_index_tv_light"
                    style="@style/indextext"
                    android:layout_marginTop="5dp"
                    android:text="紫外线指数"
                    android:drawableBottom="@mipmap/icon_light"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    style="@style/indextext" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>